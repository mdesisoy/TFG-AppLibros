@model IEnumerable<AppLibrosML.Models.LibroModelo>

@{
    ViewData["Title"] = "Listado";
}

<section class="h-100 gradient-custom-2">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col">
                <div class="rounded-top text-white d-flex flex-row bg-warning" style="height:200px;">
                    <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                        <img src="https://i.pinimg.com/564x/64/0a/91/640a91892bbe2a38a7e99cc91e1c01e5.jpg" alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px; z-index: 1">
                    </div>
                    <div class="ms-3" style="margin-top: 130px;">
                        <h5>@ViewBag.CorreoUsuario</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <hr />
    <hr />

    <!-- Formulario de búsqueda -->
    <div class="row justify-content-center align-items-center mt-3">
        <div class="col text-center">
            <form action="@Url.Action("Buscador", "Libro")" method="get" class="form-inline">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Buscar...">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Buscar</button>
            </form>
        </div>
    </div>

    <!-- Resultados de búsqueda -->
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Autor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Editorial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comentarios)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valoracion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Autor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Editorial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comentarios)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valoracion)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row justify-content-center align-items-center mt-3">
        <div class="col text-center">
            <a href="@Url.Action("UsuarioPerfil", "UsuarioLogin")" class="btn btn-warning btn-lg">Volver al perfil</a>
        </div>
    </div>
</section>
